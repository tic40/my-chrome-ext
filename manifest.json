{
  "manifest_version": 3,
  "name": "my-chrome-ext",
  "version": "1.1",
  "description": "自分用Chrome拡張機能",
  "permissions": ["scripting", "activeTab", "storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://atcoder.jp/*"],
      "js": ["atcoder.js"]
    }
  ]
}
